<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_form_auto_price" model="ir.ui.view">
        <field name="name">product.template.form.auto.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_standard_price']" position="inside">
                <group string="Precio de venta automÃ¡tico" colspan="2" groups="product_auto_sale_price.group_auto_sale_price_manager">
                    <group>
                        <field name="x_auto_price_enabled"/>
                        <field name="x_formula_type"/>
                        <field name="x_formula_value"/>
                    </group>
                    <group>
                        <field name="x_formula_source" readonly="1"/>
                        <field name="x_formula_type_effective" readonly="1"/>
                        <field name="x_formula_value_effective" readonly="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_product_template_tree_auto_price" model="ir.ui.view">
        <field name="name">product.template.tree.auto.price</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='list_price']" position="after">
                <field name="x_auto_price_enabled" optional="show" groups="product_auto_sale_price.group_auto_sale_price_manager"/>
                <field name="x_formula_type" optional="hide" groups="product_auto_sale_price.group_auto_sale_price_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
